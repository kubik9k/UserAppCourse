<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_adapter"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/item_adapter_background"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/height_item_adapter"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/shopping_cart" />

        <TextView
            android:id="@+id/name_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="8dp"
            android:text="category name кенгшщз"
            android:textColor="@color/white"
            android:textSize="23sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>